<h1 style=" margin-top: 68px;">Reviews</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Note</th>
      <th scope="col">Store</th>
    </tr>
  </thead>
  <tbody>
    <body style="background-color:#f8f9fa;">
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.note %></td>
        <td><%= review.store.id %></td>
        <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Show', review %></button></td>
        <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_review_path(review) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-outline-primary"><%= link_to 'New Review', new_review_path %></button>

<br>
 <div class="container-fluid">
      <div class="row">
        <% @reviews.each do |review| %>
