<p id="notice"><%= notice %></p>
<h1 class="display-3 text-center">Reviews</h1>


<br>
    
    <div class="container-fluid">
      <div class= "row">
        <% @reviews.each do |review| %>
            <div class= "col-md-3 d-flex align-items-stretch">
              <div class="card bg-light mb-3" style="width: 18rem;">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">Review</h5>
                  <h6 class="card-subtitle mb-2 text-muted"></h6>
                   <p class="card-text"><p>
                
                  <p>
                    <strong>Store ID:</strong>
                    <%= review.store.id %>
                  </p>
                  
                  <p>
                    <strong>Store Name:</strong>
                    <%= review.store.name %>
                  </p>
                  
                  <p>
                    <strong>Note:</strong>
                    <%= review.note %>
                  </p>
                  
                  <div class="card-buttons">
                    <button type="button" class="btn btn-outline-primary"><%= link_to 'Show', review %></button>
                    <button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_review_path(review) %></button>
                    <button type="button" class="btn btn-danger"><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></button></p>
                  </div>
                  </div>
                </div>   
              </div>
              <% end %>
          </div>
      </div>
      
<button type="button" class="btn btn-outline-primary"><%= link_to 'New Review', new_review_path %></button>
