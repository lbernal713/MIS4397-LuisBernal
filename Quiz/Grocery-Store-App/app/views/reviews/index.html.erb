<p id="notice"><%= notice %></p>


  

<h1 style=" margin-top: 68px;">Reviews</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Note</th>
      <th scope="col">Store</th>
    </tr>
  </thead>
  <tbody>
    <body style="background-color:#f8f9fa;">
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.note %></td>
        <td><%= review.store.id %></td>
        <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Show', review %></button></td>
        <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_review_path(review) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-outline-primary"><%= link_to 'New Review', new_review_path %></button>

<br>
 <div class="container-fluid">
   
      <div class="row header">
        <div class="col">
          </div>
          </div>
          <div class="row content">
        <% @reviews.each do |review| %>
        <div class="col-md-4" style="float:right">
          
          <div class="card bg-light" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Review</h5>
              <h6 class="card-subtitle text-muted">Review Information</h6>
              <p class="card-text"><p>
                
                  <p>
                    <strong>Store ID:</strong>
                    <%= review.store.id %>
                  </p>
                  
                  <p>
                    <strong>Store Name:</strong>
                    <%= review.store.name %>
                  </p>
                  
                  <p>
                    <strong>Note:</strong>
                    <%= review.note %>
                  </p>
                  
                  
                <button type="button" class="btn btn-outline-primary"><%= link_to 'Show', review %></button>
                <button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_review_path(review) %></button>
                <button type="button" class="btn btn-danger"><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></button></p>
            </div>
          </div>
          </div>
      </div>
    </div>
    <% end %>